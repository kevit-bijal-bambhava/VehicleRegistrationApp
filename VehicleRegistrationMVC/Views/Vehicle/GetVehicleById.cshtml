@model             VehicleViewModel

@{
    ViewData["Title"] = "Vehicle Details";
}

<div class="container mt-5">
        <h3 class="mb-4 bg-warning text-dark p-3 d-inline-block rounded">Vehicle Details</h3>
  <hr />
    <div class="bg-light p-4 rounded shadow-sm">
        <dl class="row">
            <dt class="col-sm-3 col-md-2 fw-bold">
                @Html.DisplayNameFor(model => model.VehicleId)
            </dt>
            <dd class="col-sm-9 col-md-10">
                @Html.DisplayFor(model => model.VehicleId)
            </dd>

            <dt class="col-sm-3 col-md-2 fw-bold">
                @Html.DisplayNameFor(model => model.VehicleNumber)
            </dt>
            <dd class="col-sm-9 col-md-10">
                @Html.DisplayFor(model => model.VehicleNumber)
            </dd>

            <dt class="col-sm-3 col-md-2 fw-bold">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-9 col-md-10">
                @Html.DisplayFor(model => model.Description)
            </dd>

            <dt class="col-sm-3 col-md-2 fw-bold">
                @Html.DisplayNameFor(model => model.VehicleOwnerName)
            </dt>
            <dd class="col-sm-9 col-md-10">
                @Html.DisplayFor(model => model.VehicleOwnerName)
            </dd>

            <dt class="col-sm-3 col-md-2 fw-bold">
                @Html.DisplayNameFor(model => model.OwnerAddress)
            </dt>
            <dd class="col-sm-9 col-md-10">
                @Html.DisplayFor(model => model.OwnerAddress)
            </dd>

            <dt class="col-sm-3 col-md-2 fw-bold">
                @Html.DisplayNameFor(model => model.OwnerContactNumber)
            </dt>
            <dd class="col-sm-9 col-md-10">
                @Html.DisplayFor(model => model.OwnerContactNumber)
            </dd>

            <dt class="col-sm-3 col-md-2 fw-bold">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-9 col-md-10">
                @Html.DisplayFor(model => model.Email)
            </dd>

            <dt class="col-sm-3 col-md-2 fw-bold">
                @Html.DisplayNameFor(model => model.VehicleClass)
            </dt>
            <dd class="col-sm-9 col-md-10">
                @Html.DisplayFor(model => model.VehicleClass)
            </dd>

            <dt class="col-sm-3 col-md-2 fw-bold">
                @Html.DisplayNameFor(model => model.FuelType)
            </dt>
            <dd class="col-sm-9 col-md-10">
                @Html.DisplayFor(model => model.FuelType)
            </dd>
        </dl>
    </div>

    <div class="mt-4 text-center">
        <a class="btn btn-primary me-2" asp-controller="Vehicle" asp-action="EditVehicleDetails" asp-route-id="@Model.VehicleId">
            <i class="bi bi-pencil-square"></i> Edit
        </a>
        <a class="btn btn-danger me-2" asp-controller="Vehicle" asp-action="DeleteVehicle" asp-route-id="@Model.VehicleId" onclick="return confirmDelete();">
            <i class="bi bi-trash"></i> Delete
        </a>
        <a class="btn btn-secondary" asp-controller="Vehicle" asp-action="GetVehiclesDetails">
            <i class="bi bi-arrow-left-circle"></i> Back to List
        </a>
    </div>
</div>

<script>
    function confirmDelete() {
        return confirm('Are you sure you want to delete this vehicle? This action cannot be undone.');
    }
</script>
